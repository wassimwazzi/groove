{
  "name": "spotify-node-app",
  "version": "0.0.1",
  "description": "Spotify example node app",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "eslint": "eslint --ext js,jsx,ts,tsx .",
    "eslint-fix": "eslint --ext js,jsx,ts,tsx . --fix",
    "eslint-staged-fix": "eslint --ext js,jsx,ts,tsx --fix",
    "format": "prettier . --write",
    "format-staged": "prettier --write",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "test": "mocha test/**/*.spec.js"
  },
  "type": "module",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "node-fetch": "^3.2.0",
    "nodemon": "^2.0.15",
    "pug": "^3.0.0",
    "request": "^2.88.2",
    "spotify-web-api-node": "^5.0.2"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.0",
    "sinon": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
