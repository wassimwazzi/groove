    link(rel='stylesheet' href='/stylesheets/output.css')
    link(rel='shortcut icon' href='/images/favicon/headset-favicon.ico' type='image/x-icon')
    block head
  
  body
    .body-content
      .navbar
        h1 Groove✨
        div.navbar-links
